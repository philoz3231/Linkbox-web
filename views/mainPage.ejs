            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        Save and Share your link!
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Link address</label>
                                <input type="text" class="form-control" id="linkAddressInput" placeholder="text">
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <% for(var i in urlListData){ %>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="media">
                 <a href="<%= urlListData[i].urlThumbnail%>" class="pull-left">
                     <% if(urlListData[i].urlThumbnail != null){%>
                     <img src="<%= urlListData[i].urlThumbnail%>" class="media-object" alt="URL Image" style="width:100px; height:80px">

                     <% } else{%>
                     <img src="images/logo.png" class="media-object" alt="URL Image" style="width:100px; height:80px">
                     <% } %>
                  </a>
                 <div class="media-body">
                      <h4 class="media-heading"><%= urlListData[i].urlTitle%> <small><i><%= urlListData[i].urlDate%></i></small></h4>
                       <p><a href="<%= urlListData[i].url%>"><%= urlListData[i].url%></a></p>
                     <br/>
                     <button type="button" class="btn btn-default" >
                         <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                         <%= urlListData[i].likedNum%></button>
                     <button type="button" class="btn btn-default" >
                         <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                     </button>
                 </div>
                </div>
            </div>
        </div>

